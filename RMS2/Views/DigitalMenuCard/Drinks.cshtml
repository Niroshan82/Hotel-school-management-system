@using RMS2.Models
@{
    ViewBag.Title = "Drinks";
    Layout = "~/Views/Shared/_DigitalMenuCardLayoutPage.cshtml";
}

<div class="row">
    @foreach (Product p in ViewBag.listDrinks)
    {

        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                    <img class="card-img-top" src="@Url.Content(p.Image)" alt="Card image cap">
                    <h3 class="card-title">
                        @p.ProductName
                    </h3><br />
                    <p class="card-text">Rs @p.Price .00</p>
                    @*<p class="card-text">@p.Description</p>*@
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons text-danger">warning</i>
                        <a href="#pablo">Get More Details...</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>


