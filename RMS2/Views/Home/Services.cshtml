
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    header.header-cat.header-cat-2 {
    background-image: url(/Assets/img/banner-2.jpg)!important;
}
</style>
<!-- HEADER
            =================-->
<header id="conent" class="header-cat header-cat-2">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Our Services</h1>
            </div>
        </div>
    </div>
</header>

<!-- SERVICES
    =================-->
<section id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-md-6  service-img m-auto">
                <img src="~/Assets/img/service.jpeg" alt="" class="img-fluid">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6 col-sm-6 text-center px-4">
                        <div class="service-desc-cont">
                            <img src="~/Assets/img/icons/I1.jpg" class="img-fluid" alt="">
                            <h5>Breakfast</h5>
                            <p>Our Service</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center px-4">
                        <div class="service-desc-cont">
                            <img src="~/Assets/img/icons/I2.jpg" class="img-fluid" alt="">
                            <h5>Lunch</h5>
                            <p>Our Service</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center px-4">
                        <div class="service-desc-cont">
                            <img src="~/Assets/img/icons/I3.jpg" class="img-fluid" alt="">
                            <h5>Dinner</h5>
                            <p>Our Service</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center px-4">
                        <div class="service-desc-cont">
                            <img src="~/Assets/img/icons/I4.jpg" class="img-fluid" alt="">
                            <h5>Special Parties</h5>
                            <p>Our Service</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- BLOG
    =================-->
