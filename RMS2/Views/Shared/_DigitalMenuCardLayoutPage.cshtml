<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Hotel-School Digital Menu Card
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/CardAssets/css/material-dashboard.css" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/CardAssets/css/demo.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="logo">
                @*<a href="http://www.creative-tim.com" class="simple-text logo-normal">*@
                <a href="#">
                    Hotel-School_Digital Menu Card
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link" href="@Url.Action("Index","DigitalMenuCard")">
                            <i class="material-icons">dashboard</i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Meals","DigitalMenuCard")">
                            <i class="material-icons">person</i>
                            <p>Meals</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Drinks","DigitalMenuCard")">
                            <i class="material-icons">content_paste</i>
                            <p>Drink</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Desearts","DigitalMenuCard")">
                            <i class="material-icons">library_books</i>
                            <p>Deserts</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("ShortEats","DigitalMenuCard")">
                            <i class="material-icons">bubble_chart</i>
                            <p>Short Eats</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("SpecialOfTheDay","DigitalMenuCard")">
                            <i class="material-icons">location_ons</i>
                            <p>Special Of The Day</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Cart","DigitalMenuCard")">
                            <i class="material-icons">notifications</i>
                            <p>Orders</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("FeedBack","DigitalMenuCard")">
                            <i class="material-icons">notifications</i>
                            <p>Feedback</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/CardAssets/js/jquery.min.js"></script>
    <script src="~/CardAssets/js/popper.min.js"></script>
    <script src="~/CardAssets/js/bootstrap-material-design.min.js"></script>
    <script src="~/CardAssets/js/perfect-scrollbar.jquery.min.js"></script>
    <!--  Google Maps Plugin    -->
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Chartist JS -->
    <script src="~/CardAssets/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/CardAssets/js/bootstrap-notify.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/CardAssets/js/material-dashboard.min.js"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/CardAssets/js/demo.js"></script>
    @RenderSection("Cardscripts", required: false)
</body>
</html>
