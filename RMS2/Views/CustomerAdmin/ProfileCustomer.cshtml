@model IEnumerable<RMS2.Models.CustomerRegistration>

@{
    ViewBag.Title = "ProfileCustomer";
    Layout = "~/Views/Shared/_CustomerAdminLayoutPage.cshtml";
}


<div class="app-title">
    <div>
        <h1><i class="fa fa-dashboard"></i> Profile</h1>
        <p>Order Details</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">My Profile</a></li>
    </ul>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    <a class="btn btn-info" href="#" data-toggle="tooltip" data-placement="left" title="View" onclick="view(@item.RegistrationID)">
                                        <i class="fa fa-eye fa-lg"></i>
                                    </a>
                                    <a class="btn btn-success" href="#" data-toggle="tooltip" data-placement="top" title="Confirm" onclick="editView(@item.RegistrationID)">
                                        <i class="fa fa-pencil fa-lg"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var editView = function (customerId) {
            var url = '@Url.Action("Edit", "CustomerAdmin")?id=' + customerId;

            $("#popupModalcustomerDiv").load(url, function () {
                $('#modalTitle').text('Edit Profile');
                $("#customerModal").modal('show');
            })
        }
    </script>
    }

<!--Print View Popup Modal-->
<div class="modal fade" id="customerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body" id="popupModalcustomerDiv">
                @*popupPV*@
            </div>
        </div>
    </div>
</div>