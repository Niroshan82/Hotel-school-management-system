
@{
    ViewBag.Title = "Index";
    if(Session["userID"] == null)
    {
        Response.Redirect("~/Admin/Login/Index");
    }
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-dashboard"></i> Dashboard</h1>
        <p>This is Hotel-School Dashboard</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-6 col-lg-3">
        <div class="widget-small primary coloured-icon">
            <i class="icon fa fa-cutlery fa-3x"></i>
            <div class="info">
                <h4>Products</h4>
                <p><b>@ViewBag.productCount</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small info coloured-icon">
            <i class="icon fa fa-users fa-3x"></i>
            <div class="info">
                <h4>Customers</h4>
                <p><b>@ViewBag.customerCount</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small warning coloured-icon">
            <i class="icon fa fa-user fa-3x"></i>
            <div class="info">
                <h4>Employees</h4>
                <p><b>@ViewBag.employeeCount</b></p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="widget-small danger coloured-icon">
            <i class="icon fa fa-cart-arrow-down fa-3x"></i>
            <div class="info">
                <h4>Orders</h4>
                <p><b>@ViewBag.orderCount</b></p>
            </div>
        </div>
    </div>
</div>

