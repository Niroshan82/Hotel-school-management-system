@model RMS2.Models.Product

@{
    ViewBag.Title = "Product Details";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-dashboard"></i>Product Details</h1>
        <p>Edit Products Details</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">Products</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Product Details</h3>
            <div class="tile-body">
                <div>
                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            ProductName
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>

                        <dt>
                            ItemCode
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ItemCode)
                        </dd>

                        <dt>
                            Price
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt>
                            Category
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category)
                        </dd>

                        <dt>
                            Description
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            Image
                        </dt>

                        <dd>
                            <img src="@Url.Content(Model.Image)" width="250px" height="250px" alt="Alternate Text"/>
                            @*@Html.DisplayFor(model => model.Image)*@
                        </dd>

                    </dl>
                </div>
                <p>
                    @Html.ActionLink("Back to List", "Index", "Product", new { @class = "btn btn-primary btn-large" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-info btn-large" })
                </p>
            </div>
        </div>
    </div>
</div>