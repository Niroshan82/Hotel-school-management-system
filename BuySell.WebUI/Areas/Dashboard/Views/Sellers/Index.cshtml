@model IEnumerable<BuySell.Models.Seller>


@{
    ViewBag.Title = "Recently Registered Users";
}

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>Recently Registered Users</h4></div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Email")
            </th>
            <th>
                @Html.Label("Phone")
            </th>
            <th>
                @Html.Label("Location")
            </th>
            <th>
                @Html.Label("Joined")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Profile", new { area = "", id = item.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name), @Html.DisplayFor(modelItem => item.State.Name), @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
    }

    </table>
</div>
