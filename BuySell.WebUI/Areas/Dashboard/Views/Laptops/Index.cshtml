@model IEnumerable<BuySell.Models.Laptop>

@{
    ViewBag.Title = "Recent Educational Events";
}

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>Recent Educational Events</h4></div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.Label("Admin Name")
            </th>
            <th>
                @Html.Label("Event Title")
            </th>
            <th>
                @Html.Label("Cost")
            </th>
            <th>
                @Html.Label("Posting Time")
            </th>
            <th>
                @Html.Label("Location")
            </th>
            <th>
                @Html.Label("Reviews")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink(item.Ad.Seller.Name, "Details", "Profile", new { area = "", id = item.Ad.Seller.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.ActionLink(item.Ad.Title, "Details", "LaptopAds", new { area = "", id = item.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad.Currency.Name) @Html.DisplayFor(modelItem => item.Ad.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad.PostingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad.City.Name), @Html.DisplayFor(modelItem => item.Ad.State.Name), @Html.DisplayFor(modelItem => item.Ad.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad.Reviews.Count)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                </td>
            </tr>
           }
    </table>
</div>
