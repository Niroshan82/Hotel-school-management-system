            </th>
            <th>
                @Html.Label("Roles")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var Manager in Model.Managers)
        {
            <tr>
                <td>
                    @Manager.Name
                </td>
                <td>
                    Manager
                </td>
                <td>
                    @Html.ActionLink("More Details", "Details", new { id = Manager.Id })
                </td>
            </tr>
        }
    </table>
</div>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>Normal User</h4></div>

    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.Label("User Name")
            </th>
            <th>
                @Html.Label("Roles")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var Seller in Model.Sellers)
    {
            <tr>
                <td>
                    @Seller.Name
                </td>
                <td>
                    Normal User
                </td>
                <td>
                    @Html.ActionLink("More Details", "Details", new { id = Seller.Id })
                </td>
            </tr>
    }
    </table>
</div>
